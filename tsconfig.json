{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "es2016"
    ],
    "paths": {
      "@/*": ["src/*"],
      "~*": ["*"]
    },
    "types": [
      "node",
      "jest"
    ]
  }
}